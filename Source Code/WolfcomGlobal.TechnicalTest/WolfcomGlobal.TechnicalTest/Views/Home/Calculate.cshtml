<section id="pricing-table" class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-offset-3">

                <form id="submitForm" class="contact-form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <select class="form-control" id="customersel" name="UserType" required>
